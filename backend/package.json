{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch src --exec \"node --max-old-space-size=4096 -r ts-node/register\" src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --max-old-space-size=4096 -r dotenv/config dist/server.js",
    "seed": "node dist/infra/db/seed.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint . --ext .js,.ts --max-warnings=0",
    "fmt": "prettier --write ."
  },
  "dependencies": {
    "@2toad/profanity": "^3.2.0",
    "@google-cloud/storage": "^7.13.0",
    "@types/express-rate-limit": "^5.1.3",
    "@xenova/transformers": "^2.17.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^2.1.4",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
